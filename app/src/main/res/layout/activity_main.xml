<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/secondTool"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/actionBarButton"
            android:background="@drawable/menn"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_6sdp"/>
        <Switch
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:id="@+id/myswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="@string/filter_stop"
            android:fontFamily="serif"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:lottie_rawRes="@raw/eye2"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            >
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageButton
                            android:id="@+id/filterOne"
                            android:background="@null"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/selector_normal"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Normal Mode"
                            android:layout_below="@+id/filterOne"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="serif"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageButton
                            android:id="@+id/filterThree"
                            android:background="@null"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/selector_dark"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"/>
                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dark Mode"
                            android:layout_below="@+id/filterThree"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="serif"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageButton
                            android:id="@+id/filterFour"
                            android:background="@null"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/selector_stress"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"/>
                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stress Free"
                            android:layout_below="@+id/filterFour"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="serif"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageButton
                            android:id="@+id/filterFive"
                            android:background="@null"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/selector_sleep"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sleeping_mode"
                            android:layout_below="@+id/filterFive"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="serif"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageButton
                            android:id="@+id/filterTwo"
                            android:background="@null"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/selector_reading"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"/>
                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reading Mode"
                            android:layout_below="@+id/readMode"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="serif"/>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageButton
                            android:id="@+id/more_btn"
                            android:background="@null"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/selector_more"
                            android:scaleType="fitCenter"
                            android:layout_weight="1"/>
                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more_apps"
                            android:layout_below="@+id/more_btn"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="serif"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"/>

                <Button
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:background="#8BC34A"
                    android:layout_marginTop="15dp"
                    android:textColor="#FFFF"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Healthy Eye Care Tips\n Protect Your Eye For Future.\n Learn about cause and protection."
                    android:layout_height="150dp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_gravity="start"
        android:id="@+id/nv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/navigation_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
